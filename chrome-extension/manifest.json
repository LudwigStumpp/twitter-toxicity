{
    "name": "Twitter Toxicity Detector",
    "description": "A Toxicity Detector on Twitter",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "js": [
                "happify.js"
            ],
            "matches": [
                "https://twitter.com/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "tfjs.js",
            "tfjs-toxicity.js",
            "background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}